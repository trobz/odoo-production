<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_partner_property_form_inherit" model="ir.ui.view">
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="pos_payment_credit.view_partner_property_form_inherit"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='payment_credit_amount']" position="replace"/>
        </field>
    </record>
    <record id="view_partner_form_inherit" model="ir.ui.view">
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="coop_membership.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='membership']/group" position="inside">
                <group name="payment_credit_amount" string="Credit">
                    <field name="credit_amount"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
