<odoo>

    <record model="ir.ui.view" id="view_capital_subscription_transfer_wizard_form">
        <field name="model">capital.subscription.transfer.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group string="Invoice">
                    <field name="invoice_id"/>
                    <field name="current_partner_id"/>
                </group>
                <group string="Transfer Information">
                    <field name="date_transfer"/>
                    <field name="new_partner_id"/>
                </group>
                <footer>
                    <button string="Confirm" name="button_confirm" type="object" default_focus="1" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
