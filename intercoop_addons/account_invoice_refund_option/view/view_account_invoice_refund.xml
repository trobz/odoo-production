<?xml version="1.0"?>
<odoo>

    <record id="view_account_invoice_refund_form_inherit" model="ir.ui.view">
        <field name="model">account.invoice.refund</field>
        <field name="inherit_id" ref="account.view_account_invoice_refund"/>
        <field name="arch" type="xml">
            <xpath expr="//group" position="after">
                <group attrs="{'invisible': [('filter_refund', '!=', 'refund')]}">
                    <group>
                        <field name="select_product"/>
                    </group>
                    <group>
                        <div attrs="{'invisible': [('select_product', '=', False)]}" class="oe_grey" colspan="4">
                            Use this option if you want to create a draft refund for some products only.
                        </div>
                    </group>
                </group>
                <group string="Invoice Lines" attrs="{'invisible': [('select_product', '=', False)]}">
                    <field name="invoice_line_ids" nolabel="1">
                        <tree string="Bill lines" editable="bottom" >
                            <field name="sequence" widget="handle" />
                            <field name="product_id"/>
                            <field name="name"/>
                            <field name="account_id" />
                            <field name="quantity"/>
                            <field name="uom_id" groups="product.group_uom"/>
                            <field name="price_unit"/>
                            <field name="discount" groups="sale.group_discount_per_so_line"/>
                            <field name="invoice_line_tax_ids" widget="many2many_tags" />
                            <field name="price_subtotal"/>
                        </tree>
                    </field>
            	</group>
            </xpath>
        </field>
    </record>

</odoo>
